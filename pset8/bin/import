#!/usr/bin/env php
<?php
    //require config file
    require(__DIR__ . "/../includes/config.php");
    // all the required arguments should be present
    if ($argc != 2){
	print("Usage: ./import text\n");
	exit(1);
    } 
    //check if the file is found
    if (!file_exists($argv[1])){
	print("File not found!\n");
	exit(1);
    }
    // check if the file is readable
    if (!is_readable($argv[1])){
	print("File is not readable!\n");
	exit(1);
    }
    // open file
    $file = fopen($argv[1], "r");
    // if file was not opened
    if ($file == false){
	print("Could not open file!\n");
	exit(1);
    }
    // take input line by line from the file and insert it into database
    while ($row = fgetcsv($file, 1000, "\t")){
	CS50::query("INSERT INTO places (country_code, postal_code, place_name,
	      admin_name1, admin_code1, admin_name2, admin_code2, admin_name3,
	      admin_code3, latitude, longitude, accuracy) VALUES(?, ?, ?, ?,
	      ?, ?, ?, ?, ?, ?, ?, ?)", $row[0], $row[1], $row[2], $row[3],
	      $row[4], $row[5], $row[6], $row[7], $row[8], $row[9], $row[10],
	      $row[11]);
    }
    // close the file
    fclose($file);

?>